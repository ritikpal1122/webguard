{
  "name": "webguard",
  "version": "0.1.0",
  "description": "Full-page web audit framework - accessibility, performance, SEO, broken links, and more",
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "lighthouse",
    "performance",
    "seo",
    "audit",
    "testing",
    "playwright",
    "web-quality"
  ],
  "author": "Ritik Pal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/webguard"
  },
  "homepage": "https://github.com/user/webguard#readme",
  "bugs": {
    "url": "https://github.com/user/webguard/issues"
  },
  "type": "module",
  "bin": {
    "webguard": "./dist/bin/cli.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.11.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^17.2.3",
    "jiti": "^2.4.2",
    "playwright": "^1.58.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "lighthouse": ">=12.0.0",
    "chrome-launcher": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "lighthouse": {
      "optional": true
    },
    "chrome-launcher": {
      "optional": true
    }
  }
}
